<ul class="nav nav-pills nav-stacked">
  {{#each list in controller}}
    {{#linkTo "list" list tagName="li" href=false}}
      {{#linkTo "list" list}}
        {{list.name}}
        <small class="time-to-complete">{{humanTimeLength list.minutesLeftToComplete}}</small>
      {{/linkTo}}
    {{/linkTo}}
  {{/each}}
</ul>
<div class="actions">
  {{#linkTo 'lists.new' class="btn btn-small"}}New List{{/linkTo}}
</div>
